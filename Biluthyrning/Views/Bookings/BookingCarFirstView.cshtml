@model Biluthyrning.ViewModels.SearchCarViewModel

@{
    ViewData["Title"] = "BookingCarFirstView";

}

<h1>Bilval</h1>

<h6>Vilka kriterier ska bilen ha?</h6>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AvailableCars">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group">
                <label hidden="hidden" asp-for="Car.Brand" class="control-label"></label>
                <select class="form-select" asp-for="Car.Brand" class="form-control" asp-items="ViewBag.Brand">
                    <option value="none" selected disabled hidden>---Välj märke---</option>
                </select>
                <span asp-validation-for="Car.CarId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label hidden="hidden" asp-for="Car.CarId" class="control-label"></label>
                <select class="form-select" asp-for="Car.CarId" class="form-control" asp-items="ViewBag.Color">
                    <option value="none" selected disabled hidden>---Välj färg---</option>
                </select>
                <span asp-validation-for="Car.CarId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label hidden="hidden" asp-for="Car.CarId" class="control-label"></label>
                <select class="form-select" asp-for="Car.CarId" class="form-control" asp-items="ViewBag.CarGear">
                    <option value="none" selected disabled hidden>---Välj växeltyp---</option>
                </select>
                <span asp-validation-for="Car.CarId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label hidden="hidden" asp-for="Car.CarId" class="control-label"></label>
                <select class="form-select" asp-for="Car.CarId" class="form-control" asp-items="ViewBag.Fuel">
                    <option value="none" selected disabled hidden>---Välj drivmedel---</option>
                </select>
                <span asp-validation-for="Car.CarId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label hidden="hidden" asp-for="Car.CarId" class="control-label"></label>
                <select class="form-select" asp-for="Car.CarId" class="form-control" asp-items="ViewBag.CarSize">
                    <option value="none" selected disabled hidden>---Välj storlek---</option>
                </select>
                <span asp-validation-for="Car.CarId" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-4">
                        <h1>
                            När vill du hyra bil?
                        </h1>
                        <div class="form-group">
                            <label asp-for="DatePicker.StartDate" class="control-label"></label>
                            <input asp-for="DatePicker.StartDate" class="form-control" />
                            <span asp-validation-for="DatePicker.StartDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DatePicker.EndDate" class="control-label"></label>
                            <input asp-for="DatePicker.EndDate" class="form-control" />
                            <span asp-validation-for="DatePicker.EndDate" class="text-danger"></span>
                        </div>
                        <br />

                </div>
            </div>

            <br />
            <div class="form-group">
                <button class="btn btn-primary" type="submit" value="Create">Se tillgängliga bilar</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



