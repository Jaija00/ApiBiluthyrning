@model Biluthyrning.Models.User

@{
    ViewData["Title"] = "UserView";
}

<h1>Användare</h1>

<h4>Välj i listan för vilken användare du är</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            
            <div class="form-group">
                <label hidden ="hidden" asp-for="FirstName" class="control-label"></label>
                 <select asp-for="FirstName" asp-items="ViewBag.Users" class="form-control" > </select>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-primary" asp-controller="Users" asp-action="" asp-route-id="@Model?.Id"> Välj</a>
            </div>
        </form>
       
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}