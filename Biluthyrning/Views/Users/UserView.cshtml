@model Biluthyrning.Models.User

@{
    ViewData["Title"] = "UserView";
  
}

<h1>Användare</h1>

<h6>Välj i listan för vilken användare du är</h6>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DetailsViewUser">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label hidden="hidden" asp-for="UserId" class="control-label"></label>
                <select class="form-select" asp-for="UserId" class="form-control" asp-items="ViewBag.Users">
                    <option value="none" selected disabled hidden>---Välj användare---</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Gå vidare" class="btn btn-primary"/>
                <a asp-action="UserCreate" button class="btn btn-primary" type="submit" value="Create">Skapa ny användare</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



