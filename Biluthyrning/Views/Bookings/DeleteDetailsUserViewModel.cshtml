@model Biluthyrning.ViewModels.DetailsUserViewModel


@{
    ViewData["Title"] = "Delete";
}

<h1>Ta bort bokning</h1>

<h3>Är du säker på att du vill ta bort den här heta bokningen?</h3>
<div>
    <h4>Bokning</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Brand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.Start)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.Start)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.End)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.End)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Booking.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Details" asp-controller="Users"asp-route="@Model?User.UserId" class="btn btn-secondary">Tillbaka</a>

    </form>
</div>

