<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Biluthyrning</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Biluthyrning.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black border-bottom box-shadow mb-3">
            <div class="container justify-content-center">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">NHB</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between flex-grow-0">
                    <ul class="navbar-nav text-center flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Cars" asp-action="OurCars">Våra Bilar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Bookings" asp-action="BookingCarFirstView">Boka Bil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Users" asp-action="UserView">Användare</a>
                        </li>
                        <li class="nav-item dropdown">

                            <a class="nav-link text-light" asp-area="" asp-controller="Users" asp-action="AdminView">Admin</a>
                            <div class="dropdown-menu text-center" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-area="" asp-controller="Users" asp-action="Index">Redigera Användare</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Cars" asp-action="Index">Redigera Bilar</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Users" asp-action="AdminLista">Bokningar</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Bookings" asp-action="Booking">Tillgänliga Bilar</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Om Oss</a>
                            <div class="dropdown-menu text-center" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Privacy">Om Nima</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Contact">Kontakta oss</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color:#FFED00">
        <div class="container">
            &copy; 2023 - Nimas Heta Bilar 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
